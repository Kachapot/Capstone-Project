<script>
  $(document).ready(function() {
  // Load data for the first tab on page load
  loadTabData('tab1', 'table1');
  
  // Handle tab click events
  $('.nav-tabs a').on('shown.bs.tab', function(event) {
    var tabName = $(event.target).attr('href').substr(1);
    var tableId = 'table' + tabName.substr(3);
    loadTabData(tabName, tableId);
  });
  
  // Function to load tab data using AJAX
  function loadTabData(tabName, tableId) {
  $.getJSON('/sell/', function(data) {
    var table = $('#' + tableId).DataTable({
      data: data,
      columns: [
        { data: 'order_sell_id' },
        { data: 'cus_name' },
        { data: 'emp_name' },
        { data: 'ship' },
        { data: 'order_sell_amount' },
        { data: 'order_sell_total' },
        { data: 'order_sell_date' },
        { data: 'order_sell_status' }
      ]
    });
  });
}
});

</script>