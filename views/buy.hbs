<div class="container pt-5 mt-5">
  <div class="row d-flex flex-row">
    <div class="col-6">
      <h3 class="text-start">รายการใบสั่งซื้อสินค้า</h3>
    </div>
    <div class="col-6">
      <h3 class="text-end">จำนวน {{count}} รายการ</h3>
    </div>
  </div>

    <div class="row d-flex">
    <div class="col-6">
  </div>
    <div class="col">
      <div class="d-grid gap-2 d-md-flex justify-content-md-end ">
      <form class="d-flex" method="get" >
          <input class="form-control me-2" type="search" name="search" placeholder="กรอกคำที่ต้องการค้นหา" aria-label="Search">
          <button class="btn btn-success" type="submit">ค้นหา</button>
        </form>
      </div>
    </div>
  </div>

  <hr>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">รหัสใบสั่งซื้อสินค้า</th>
        <th scope="col">ชื่อผู้ทำรายการ</th>
        <th scope="col">จำนวนสินค้า</th>
        <th scope="col">ราคารวม</th>
        <th scope="col">วันที่สร้างรายการ</th>
        <th scope="col">วันที่อนุมัติ</th>
        <th scope="col">สถานะ</th>
        <th scope="col" class="text-end">action</th>
      </tr>
    </thead>
    <tbody>
      {{#each payload}}
      <tr>
        <th scope="row">{{order_buy_id}}</th>
        <td>{{emp_name}}</td>
        <td>{{order_buy_amount}}</td>
        <td>{{order_buy_total}}</td>
        <td>{{order_buy_date}}</td>
        <td>{{approve_date}}</td>
        <td>{{order_buy_status}}</td>
        <td class="text-end">
          <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"> ดูข้อมูล</i></a>
          <a href="/buy/delete" type="button" class="btn btn-danger btn-small"><i class="bi bi-trash3-fill"></i> ลบ</i></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

{{!-- Pagination --}}
  <div class="row">
    <div class="col justify-content-start">
      <h5>{{item}} จาก {{count}} รายการ</h5>
    </div>
    <div class="col">
    <nav aria-label="...">
    <ul class="pagination justify-content-end">
      {{#if pagination.previous}}
          <li class="page-item">
            <a class="page-link" href="?page={{pagination.page}}&pageType=Previous" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          {{else}}
          <li class="page-item disabled">
            <a class="page-link" href="?page={{pagination.page}}&pageType=Previous" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          {{/if}}

      {{#each pagination.page_item}}
        {{#if this.active}}
          <li class="page-item active">
            <span class="page-link">
              {{this.page}}
            </span>
          </li>
        {{else}}
          <li class="page-item"><a class="page-link" href="?page={{this.page}}">{{this.page}}</a></li>
        {{/if}}
      {{/each}}

      {{#if pagination.next}}
          <li class="page-item">
            <a class="page-link" href="?page={{pagination.page}}&pageType=Next" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
          {{else}}
          <li class="page-item disabled">
            <a class="page-link" href="?page={{pagination.page}}&pageType=Next" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
          {{/if}}
    </ul>
  </nav> 
    </div>
  </div>
</div>
