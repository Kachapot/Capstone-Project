          <a class="page-link" href="?page={{pagination.page}}&pageType=Previous" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
        {{#each pagination.page_item}}
          <li class="page-item"><a class="page-link" href="?page={{this}}">{{this}}</a></li>
        {{/each}}
